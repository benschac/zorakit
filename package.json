{
  "name": "zorakit",
  "author": {
    "name": "Benjamin Schachter"
  },
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "postinstall": "husky install",
    "dev": "pnpm --recursive --parallel --filter \"!*-app\" dev",
    "dev:lib": "pnpm --filter zorakit dev",
    "dev:example": "pnpm dev:lib & pnpm --filter example dev",
    "dev:site": "pnpm dev:lib & pnpm --filter site dev",
    "dev:cli": "pnpm --filter create-zorakit dev",
    "dev:template:next-app": "pnpm --filter zorakit-next-app dev",
    "build": "pnpm --recursive --parallel --filter \"!*-app\" build",
    "start": "pnpm dev",
    "lint": "eslint . --ext=js,jsx,mjs,ts,cjs,tsx && pnpm format:check && pnpm --recursive typecheck",
    "lint:fix": "eslint . --ext=js,jsx,mjs,ts,cjs,tsx --fix && pnpm format:fix",
    "format:check": "prettier --check \"./**/*.{ts,js,jsx,mjs,cjs,md,mdx,tsx}\"",
    "format:fix": "prettier --write \"./**/*.{ts,js,jsx,mjs,cjs,md,mdx,tsx}\"",
    "link:cli": "cd packages/create-zorakit && pnpm link --global",
    "test": "pnpm test:unit",
    "test:unit": "vitest",
    "test:update": "vitest --update",
    "test:watch": "vitest --watch",
    "test:cli": "pnpm --filter create-zorakit test:build",
    "test:cli:dev": "pnpm --filter create-zorakit test:dev",
    "test:cli:clean": "rm -rf ./packages/create-zorakit/generated-test-app",
    "changeset": "changeset",
    "clean": "rm -rf ./packages/zorakit/dist && rm -rf ./packages/zorakit/node_modules && rm -rf ./packages/create-zorakit/dist && pnpm install",
    "release": "pnpm release:verify-git && pnpm release:build && changeset publish",
    "release:verify-git": "git diff --exit-code && git rev-parse --abbrev-ref HEAD | grep \"main\"",
    "release:build": "pnpm clean && pnpm lint && pnpm test && MINIFY_CSS=true pnpm --recursive --parallel --filter \"!*-app\" build && cp README.md packages/zorakit/README.md",
    "release:test": "pnpm release:build && pnpm --filter example dev",
    "ci:example": "pnpm --filter=zorakit prepare && pnpm --filter=example build",
    "ci:site": "pnpm --filter=zorakit prepare && pnpm --filter=site build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rainbow-me/zorakit.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@babel/register": "^7.16.0",
    "@changesets/cli": "2.18.1",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@lavamoat/preinstall-always-fail": "^1.0.0",
    "@rushstack/eslint-patch": "^1.1.0",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.1",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "@vanilla-extract/esbuild-plugin": "^2.0.0",
    "@vanilla-extract/vite-plugin": "^3.1.2",
    "@wagmi/core": "^0.3.2",
    "autoprefixer": "^10.4.0",
    "esbuild": "^0.14.39",
    "eslint": "7.32.0",
    "eslint-config-rainbow": "^3.0.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eventemitter3": "^4.0.7",
    "husky": "^7.0.4",
    "next": "^12.1.6",
    "postcss": "^8.4.6",
    "postcss-prefix-selector": "^1.15.0",
    "prettier": "^2.5.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-query": "4.0.0-beta.5",
    "recursive-readdir-files": "^2.0.7",
    "typescript": "^4.7.2",
    "vitest": "^0.5.0",
    "wagmi": "^0.4.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
